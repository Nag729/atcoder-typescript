{
  "version": "0.2.0",
  // https://qiita.com/murasuke/items/9ce3eeeee949324f32b7
  "configurations": [
    {
      "name": "Debug TS File",
      "type": "pwa-node",
      "request": "launch",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "args": ["${file}", "--transpile-only"],
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      }
    }
  ]
}
